<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/idea_background_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/overview_shade_height"
        android:layout_alignBottom="@id/idea_background_image"
        android:layout_gravity="bottom"
        android:src="@drawable/overview_shade"/>

    <TextView
        android:id="@+id/idea_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/overview_name_padding_left"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="@dimen/overview_idea_name"
        android:layout_alignBottom="@id/idea_background_image"/>

</RelativeLayout>