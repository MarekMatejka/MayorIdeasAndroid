<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialDrawerTheme.Light.ActionBar">
        <item name="colorPrimary">@color/mayorideas_blue</item>
        <item name="colorPrimaryDark">@color/mayorideas_blue</item>
        <item name="colorAccent">@color/mayorideas_blue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="OverviewActivityTheme" parent="MaterialDrawerTheme.Light">
        <item name="colorPrimary">@color/mayorideas_blue</item>
        <item name="colorPrimaryDark">@color/mayorideas_blue</item>
        <item name="colorAccent">@color/mayorideas_blue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="FloatLabeledEditTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="NewIdeaHeaderTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="CommentEditText">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/mayorideas_blue</item>
        <item name="colorControlHighlight">@color/mayorideas_blue</item>
    </style>

</resources>
